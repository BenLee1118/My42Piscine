#include <unistd.h>

void	print_bits(unsigned char octet)
{
	int i;
	char c;

	i = 128;
	while (i > 0)
	{
		if (i > octet)
		{
			c = '0';
			i = i / 2;
			write(1, &c, 1);
		}
		else
		{
			c = '1';
			write(1, &c, 1);
			octet = octet - i;
			i = i / 2;
		}
	}
}


unsigned char swap_bits(unsigned char octet)
{
	octet = (octet >> 4) | (octet << 4);
	print_bits(octet);
	return (0);
}

int main(void)
{
	unsigned char i;

	i = 'a';
	write(1, "N:", 2);
	print_bits(i);
	write(1, "\nS:", 3);
	swap_bits(i);
	return (0);
}
